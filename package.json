{
  "name": "camarav2",
  "version": "1.0.0",
  "description": "Production-ready full-stack application with Railway pattern",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "test": "npm run test:unit",
    "test:unit": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm run test:unit --workspace=packages/backend",
    "test:frontend": "npm run test --workspace=packages/frontend",
    "typecheck": "npm run typecheck --workspaces",
    "lint": "npm run lint --workspaces",
    "format:check": "echo 'Format check not configured'",
    "db:generate": "npm run db:generate --workspace=packages/backend",
    "db:migrate:dev": "npm run db:migrate:dev --workspace=packages/backend",
    "db:migrate:deploy": "npm run db:migrate:deploy --workspace=packages/backend",
    "db:seed": "npm run db:seed --workspace=packages/backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
